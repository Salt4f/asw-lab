@functions {
    string GetUserID()
    {
        string email = Context.User.Claims.Where(claim => claim.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/emailaddress")
                    .Select(claim => claim.Value).FirstOrDefault();

        if (email != null )return email.Split('@')[0];
        return "";
    }
}